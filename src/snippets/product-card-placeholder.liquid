{% comment %}
    Renders a product card placeholder

    Usage:
    {% render 'product-card-placeholder' %}
{% endcomment %}
{%- unless index -%}
  {%- assign index = 1 -%}
{%- endunless -%}

<a href="#" class="group text-sm">
  <div class="w-full aspect-w-1 aspect-h-1 rounded-lg overflow-hidden bg-gray-100 group-hover:opacity-75">
    {{ 'product-' | append: index | placeholder_svg_tag: 'placeholder-svg' }}
  </div>
  <h3 class="mt-4 font-medium text-gray-900">
    {{ 'onboarding.product_title' | t }}
  </h3>
  <p class="text-gray-500 italic">
    {{ 'products.product.vendor' | t }}
  </p>
  <p class="mt-2 font-medium text-gray-900">
    {% render 'price' %}
  </p>
</a>